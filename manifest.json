{
    "manifest_version": 2,

    "name": "ImageStore",
    "description": "Upload gifs (and other images) to a HTTP GET endpoint (i.e. Imgur)",
    "version": "0.1",
    "minimum_chrome_version": "20",

    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png"
    },

    "permissions": [
        "contextMenus",
        "tabs",
        "storage"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "options_page": "options/index.html"
}
